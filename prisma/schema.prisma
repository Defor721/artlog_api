generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum LoginType {
  LOCAL   // 일반 로그인(기본값)
  GOOGLE  // 구글 로그인  
  KAKAO   // 카카오 로그인
  NAVER   // 네이버 로그인
}

enum Role {
  USER
  ADMIN
}


model User {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId //mongodb 자동 매핑
  email       String  @unique // 이메일은 유니크하지만, 같은 이메일로 다른 provider 사용 가능
  password    String? // 소셜로그인의 경우 없음
  name        String? // 소셜로그인 기본값때문에 중복허용
  image       String? // 추후 변경 예정(현재 이미지 url)
  loginType   LoginType
  providerId  String?  // 해당 제공자의 사용자 ID
  role        Role   @default(USER) // 관리자계정은 DB에서 생성
  createdAt   DateTime @default(now()) // 생성 시간
  updatedAt   DateTime @updatedAt // 자동 업데이트 시간
  posts     Post[] // 사용자 게시물 기록
}

model Performance {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  seq         String  @unique
  area        String
  gpsX        Float
  gpsY        Float
  place       String
  realmName   String
  serviceName String
  startDate   String
  endDate     String
  thumbnail   String
  title       String
}

model Post {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  user              User     @relation(fields: [userId], references: [id]) // fields:외래키역할을하는 필드 references:연결된 상대 모델의 필드
  userId            String   @db.ObjectId
  selectedExhibition String
  star               Float
  title              String
  detail             String
  isPublic           Boolean
  keywords           String[]
  ticket             String?
  photos             String[]
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Upload {
 id          String  @id @default(auto()) @map("_id") @db.ObjectId
  originalName String
  mimeType     String
  data         Bytes
  createdAt    DateTime @default(now())
}
