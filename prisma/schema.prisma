model Performance {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  seq         String  @unique
  area        String
  gpsX        Float
  gpsY        Float
  place       String
  realmName   String
  serviceName String
  startDate   String
  endDate     String
  thumbnail   String
  title       String
}

model Record {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  user              User     @relation(fields: [userId], references: [id])
  userId            String
  selectedExhibition Json?
  star               Int
  title              String
  detail             String
  isPublic           Boolean
  keywords           String[]
  ticket             String?
  photos             String[]
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

